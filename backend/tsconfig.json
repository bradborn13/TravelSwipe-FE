{
  "compilerOptions": {
    /* Module system */
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    /* Output */
    "target": "ES2022",
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "removeComments": true,

    /* Interop */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Decorators (Nest / similar) */
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    /* Type safety */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Build performance */
    "incremental": true
  },

  "include": ["src/**/*.ts", "src/**/*.spec.ts"],
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"] 
}